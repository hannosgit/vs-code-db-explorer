{
  "name": "db-explorer",
  "displayName": "DB Explorer",
  "description": "Connect to your Database for browsing, queries, and data editing.",
  "repository": {
    "type": "git",
    "url": "https://github.com/hannosgit/vs-code-db-explorer"
  },
  "version": "0.0.3",
  "publisher": "hannos",
  "icon": "resources/db.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Data Science", "Visualization"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:sql"
  ],
  "contributes": {
    "commands": [
      {
        "command": "dbExplorer.addConnection",
        "title": "Add Connection",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.connect",
        "title": "Connect",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.disconnect",
        "title": "Disconnect",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.refreshSchema",
        "title": "Refresh Schema",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.runQuery",
        "title": "Run Query",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.runAllStatements",
        "title": "Run All Statements",
        "category": "DB Explorer",
        "icon": "$(play)"
      },
      {
        "command": "dbExplorer.openTable",
        "title": "Open Table",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.dropSchema",
        "title": "Drop Schema",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.dropTable",
        "title": "Drop Table",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.truncateTable",
        "title": "Truncate Table",
        "category": "DB Explorer"
      },
      {
        "command": "dbExplorer.clearPassword",
        "title": "Clear Stored Password",
        "category": "DB Explorer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dbExplorer.runQuery",
          "when": "resourceLangId == sql",
          "group": "navigation@10"
        },
        {
          "command": "dbExplorer.runAllStatements",
          "when": "resourceLangId == sql",
          "group": "navigation@11"
        }
      ],
      "explorer/context": [
        {
          "command": "dbExplorer.runQuery",
          "when": "resourceExtname == .sql",
          "group": "navigation@10"
        },
        {
          "command": "dbExplorer.runAllStatements",
          "when": "resourceExtname == .sql",
          "group": "navigation@11"
        }
      ],
      "editor/title": [
        {
          "command": "dbExplorer.runAllStatements",
          "when": "resourceLangId == sql",
          "group": "navigation@10"
        }
      ],
      "view/item/context": [
        {
          "command": "dbExplorer.refreshSchema",
          "when": "view == dbSchema && viewItem == dbSchema",
          "group": "navigation@5"
        },
        {
          "command": "dbExplorer.dropSchema",
          "when": "view == dbSchema && viewItem == dbSchema",
          "group": "navigation@20"
        },
        {
          "command": "dbExplorer.openTable",
          "when": "view == dbSchema && viewItem == dbTable",
          "group": "navigation@10"
        },
        {
          "command": "dbExplorer.dropTable",
          "when": "view == dbSchema && viewItem == dbTable",
          "group": "navigation@20"
        },
        {
          "command": "dbExplorer.truncateTable",
          "when": "view == dbSchema && viewItem == dbTable",
          "group": "navigation@19"
        }
      ],
      "view/title": [
        {
          "command": "dbExplorer.addConnection",
          "when": "view == dbConnections",
          "group": "navigation@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dbExplorer",
          "title": "DB Explorer",
          "icon": "resources/db.svg"
        }
      ]
    },
    "views": {
      "dbExplorer": [
        {
          "id": "dbConnections",
          "name": "DB Connections"
        },
        {
          "id": "dbSchema",
          "name": "DB Schema"
        }
      ]
    },
    "configuration": {
      "title": "DB Explorer",
      "properties": {
        "dbExplorer.profiles": {
          "type": "array",
          "default": [],
          "description": "Saved DB connection profiles.",
          "items": {
            "type": "object",
            "required": ["id", "label", "host", "port", "database", "user"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique profile id."
              },
              "label": {
                "type": "string",
                "description": "Display name for the profile."
              },
              "engine": {
                "type": "string",
                "enum": ["postgres"],
                "default": "postgres",
                "description": "Database engine. Defaults to \"postgres\" when omitted."
              },
              "host": {
                "type": "string",
                "description": "Host name or IP."
              },
              "port": {
                "type": "number",
                "description": "Port number."
              },
              "database": {
                "type": "string",
                "description": "Database name."
              },
              "user": {
                "type": "string",
                "description": "Database user."
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "test": "npm run compile && node ./dist/test/runTest.js",
    "coverage": "npm run compile && npx c8 --reporter=text --reporter=html --all --src dist --exclude \"dist/test/**\" node ./dist/test/runTest.js",
    "watch": "tsc -watch -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.10.9",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.4.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "pg": "^8.11.5"
  }
}
